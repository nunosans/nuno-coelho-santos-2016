<article class="project project-thread">

  <section class="emphasize">
    <p>
      <%= t(:thread_title) %>
    </p>
  </section>

  <main>

    <div class="project-intro">
      <h6><%= t(:label_role) %></h6>
      <p>
        <%= t(:thread_role) %>
      </p>
      <h6><%= t(:label_date) %></h6>
      <p>
        <%= t(:thread_date) %>
      </p>
      <h6><%= t(:label_website) %></h6>
      <p>
        <%= t(:thread_website) %>
      </p>
    </div>

    <div class="project-item project-thread-intro">
      <p>
        <%= t(:thread_body_1) %>
      </p>
    </div>

    <div class="project-item project-thread-week">
      <p>
        <%= t(:thread_body_2) %>
      </p>
    </div>

    <div class="project-item project-thread-mobile-intro scribble">
      <p>
        <%= t(:thread_scribble_1) %>
      </p>
    </div>

    <div class="project-item project-thread-mobile-intro-part-1">
      <p>
        <%= t(:thread_body_3) %>
      </p>
    </div>

    <div class="project-item project-thread-mobile-intro-part-2">
      <p>
        <%= t(:thread_body_4) %>
      </p>
    </div>

    <div class="project-item project-thread-mobile-wireframes">
      <img
        class="lazy-load"
        srcset="/images/nuno-coelho-santos-thread-mobile-wireframes-2x.png 2x,
                /images/nuno-coelho-santos-thread-mobile-wireframes-3x.png 3x"
        src="/images/nuno-coelho-santos-thread-mobile-wireframes-1x.png"
        alt="Thread V2 iOS wireframes, work by Nuno Coelho Santos"
        width="1340"
        height="1180"
      >
    </div>

    <div class="project-item project-thread-mobile-desktop">
      <p>
        <%= t(:thread_body_5) %>
      </p>
      <img
        class="lazy-load project-thread-mobile-modals-narrow"
        srcset="/images/nuno-coelho-santos-thread-mobile-modals-narrow-2x.jpg 2x,
                /images/nuno-coelho-santos-thread-mobile-modals-narrow-3x.jpg 3x"
        src="/images/nuno-coelho-santos-thread-mobile-modals-narrow-1x.jpg"
        alt="Thread V2 modals redesign, work by Nuno Coelho Santos"
        width="750"
        height="1142"
        data-layout="narrow"
      >
      <img
        class="lazy-load project-thread-mobile-modals-wide"
        srcset="/images/nuno-coelho-santos-thread-mobile-modals-wide-2x.jpg 2x,
                /images/nuno-coelho-santos-thread-mobile-modals-wide-3x.jpg 3x"
        src="/images/nuno-coelho-santos-thread-mobile-modals-wide-1x.jpg"
        alt="Thread V2 modals redesign, work by Nuno Coelho Santos"
        width="1280"
        height="1650"
        data-layout="wide"
      >
      <img
        class="lazy-load project-thread-mobile-components"
        srcset="/images/nuno-coelho-santos-thread-mobile-components-2x.png 2x,
                /images/nuno-coelho-santos-thread-mobile-components-3x.png 3x"
        src="/images/nuno-coelho-santos-thread-mobile-components-1x.png"
        alt="Thread V2 component library, work by Nuno Coelho Santos"
        width="345"
        height="892"
      >
    </div>

    <div class="project-item project-thread-browse-intro scribble">
      <p>
        <%= t(:thread_scribble_2) %>
      </p>
    </div>

    <div class="project-item project-thread-browse-intro-part-1">
      <p>
        <%= t(:thread_body_6) %>
      </p>
    </div>

    <div class="project-item project-thread-browse-intro-part-2">
      <p>
        <%= t(:thread_body_7) %>
      </p>
    </div>

    <div class="project-item project-thread-browse-mobile">
      <div class="iphone-frame project-thread-browse-mobile" data-layout="narrow">
        <video
          width="293"
          height="518"
          poster="/videos/nuno-coelho-santos-thread-browse-mobile.jpg"
          autoplay muted loop
        >
          <source src="/videos/nuno-coelho-santos-thread-browse-mobile.mp4">
          <source src="/videos/nuno-coelho-santos-thread-browse-mobile.ogg"  type="video/ogg">
          <source src="/videos/nuno-coelho-santos-thread-browse-mobile.webm" type="video/webm">
        </video>
      </div>
      <img
        class="lazy-load project-thread-browse-icons"
        srcset="/images/nuno-coelho-santos-thread-browse-icons-2x.png 2x,
                /images/nuno-coelho-santos-thread-browse-icons-3x.png 3x"
        src="/images/nuno-coelho-santos-thread-browse-icons-1x.png"
        alt="Thread Browse icons, work by Nuno Coelho Santos"
        width="560"
        height="636"
        data-layout="wide"
      >
      <div class="iphone-frame project-thread-browse-mobile-video" data-layout="wide">
        <video
          width="293"
          height="518"
          poster="/videos/nuno-coelho-santos-thread-browse-mobile.jpg"
          autoplay muted loop
        >
          <source src="/videos/nuno-coelho-santos-thread-browse-mobile.mp4">
          <source src="/videos/nuno-coelho-santos-thread-browse-mobile.ogg"  type="video/ogg">
          <source src="/videos/nuno-coelho-santos-thread-browse-mobile.webm" type="video/webm">
        </video>
      </div>
      <p>
        <%= t(:thread_body_8) %>
      </p>
    </div>

    <div class="project-item project-thread-browse-desktop">
      <img
        class="lazy-load screenshot"
        srcset="/images/nuno-coelho-santos-thread-browse-desktop-2x.jpg 2x,
                /images/nuno-coelho-santos-thread-browse-desktop-3x.jpg 3x"
        src="/images/nuno-coelho-santos-thread-browse-desktop-1x.jpg"
        alt="Thread browse desktop design, work by Nuno Coelho Santos"
        width="1180"
        height="816"
      >
    </div>

    <div class="project-item project-thread-outro">
      <p>
        <%= t(:thread_body_9) %>
      </p>
    </div>

  </main>

</article>
